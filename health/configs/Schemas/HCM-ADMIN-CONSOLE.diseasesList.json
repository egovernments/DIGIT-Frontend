{
  "tenantId": "{{tenantId}}",
  "code": "HCM-ADMIN-CONSOLE.diseases",
  "description": "Schema for maintaining list of supported diseases across campaign templates and project types",
  "definition": {
    "type": "object",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": ["code", "name", "active"],
    "x-unique": ["code"],
    "properties": {
      "code": {
        "type": "string",
        "description": "Unique disease code (e.g., MALARIA, POLIO)"
      },
      "name": {
        "type": "string",
        "description": "Human-readable name of the disease"
      },
      "active": {
        "type": "boolean",
        "description": "Flag to indicate if the disease is active"
      },
      "description": {
        "type": "string",
        "description": "Optional detailed description of the disease"
      }
    }
  },
  "isActive": true
}
