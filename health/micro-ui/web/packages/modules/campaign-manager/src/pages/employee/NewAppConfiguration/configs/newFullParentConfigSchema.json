{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["flow", "project", "name"],
  "x-unique": ["flow", "project", "name"],
  "properties": {
    "version": {
      "type": "number"
    },
    "flow": {
      "type": "string",
      "minLength": 1
    },
    "project": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": ["object", "template"]
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "headerFields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "jsonPath": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "header": {
      "type": "string"
    },
    "body": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "fields": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "footer": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "order": {
      "type": "number"
    },
    "page": {
      "type": "string"
    },
    "label": {
      "type": "string"
    },
    "navigateTo": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "actionLabel": {
      "type": "string"
    },
    "description": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
